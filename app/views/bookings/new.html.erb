<h1>Passenger information</h1>
<%= form_with model: @booking do |form| %>
  <ul>
    <%= form.fields_for :passengers do |f| %>
      <li>
        <%= f.label :name %>
        <%= f.text_field :name %> 
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
    <% end %>
  </ul>
  <%= form.hidden_field :flight_id, value: @flight.id %>
  <%= form.submit %>
<% end %>